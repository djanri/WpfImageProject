<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="BaseBorderStyle" TargetType="Border">
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="Gray"/>
        <Setter Property="Margin" Value="0,5,5,5"/>
    </Style>
    <Style x:Key="ImageBorderStyle" BasedOn="{StaticResource BaseBorderStyle}" TargetType="Border">
        <Setter Property="BorderThickness" Value="2"/>
    </Style>
    <Style x:Key="LineStyle" BasedOn="{StaticResource BaseBorderStyle}" TargetType="Border">
        <Setter Property="BorderBrush" Value="Black"/>
    </Style>
</ResourceDictionary>